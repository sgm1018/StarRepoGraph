---
import Blob from './Blob.astro';
---

<section class="relative min-h-[80vh] flex items-center overflow-hidden">
  <!-- Blobs -->
  <div class="absolute inset-0 overflow-hidden -z-10">
    <Blob args="top-0 -left-48 w-96 h-96 text-blue-400" />
    <Blob args="bottom-0 -right-48 w-96 h-96 text-blue-400" />
  </div>

  <div class="relative w-full max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
    <div class="text-center space-y-8">
      <div class="relative space-y-4">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold tracking-tight text-nowrap">
          Create stunning star graphs for your <br>
          <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
            GitHub Repository
          </span>
        </h1>
        <p class="max-w-2xl mx-auto text-xl text-text/70">
          Visualize and share your repository's stars with beautiful, insightful graphs.
        </p>
      </div>

      <form class="max-w-2xl mx-auto">
        <div class="relative flex flex-col sm:flex-row gap-4">
          <div class="flex-1 relative group">
            <div class="absolute inset-0 bg-gradient-to-r from-primary to-secondary rounded-xl blur opacity-25 group-hover:opacity-40 transition duration-200"></div>
            <input
              type="text"
              placeholder="https://github.com/username/repository"
              class="relative w-full px-6 py-4 bg-background border border-border rounded-xl shadow-lg focus:outline-none focus:ring-2 focus:ring-primary/50 transition duration-200"
            />
          </div>
          <button
            type="submit"
            class="relative group"
          >
            <div class="absolute inset-0 bg-gradient-to-r from-primary to-secondary rounded-xl blur opacity-75 group-hover:opacity-100 transition duration-200"></div>
            <span class="relative block px-8 py-4 bg-primary hover:bg-primary/90 text-white font-medium rounded-xl transition duration-200">
              Generate
            </span>
          </button>
        </div>
      </form>
    </div>
  </div>
</section>